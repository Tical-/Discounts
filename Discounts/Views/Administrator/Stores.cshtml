@section scripts
{
    <script>
        if (window.location.href.trim().split('/').length > 5) {
            var Id = window.location.href.trim().split('/')[5];
            if (Id != null && Id != undefined && Id.trim() !== '') {

            } else {
                window.location.href = "/Administrator/Brands";
            }
        } else {
            window.location.href = "/Administrator/Brands";
        }
        var model = new Application.StoresViewModel(Id);
        ko.applyBindingsWithValidation(model, document.getElementById('Stores'));

        function Priview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#priview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#File").change(function () {
            Priview(this);
        });
        $(window).resize(function () {
            $('#All').masonry('destroy');
            $('#All').masonry({
                itemSelector: '.item',
                isAnimated: true
            });
        });

        setTimeout(function () {
            $('#All').masonry({
                itemSelector: '.item',
                isAnimated: true
            });
        }, 1500);
    </script>
}
<style>
    .item {
        border: 3px Silver solid;
        background-color: Gainsboro;
        border-radius: 8px;
        cursor: pointer;
        width: 250px;
        text-align: center;
        float: left;
        margin: 10px;
        overflow: hidden;
    }

    .itemImg {
        padding: 3px;
    }

    .Name {
        font-size: 22px;
        position: relative;
        left: 15px;
    }

    .Description {
    }

    .closeButton {
        float: right;
        cursor: pointer;
        color: white;
        border: 1px solid black;
        border-radius: 30px;
        background: black;
        font-size: 31px;
        font-weight: bold;
        display: inline-block;
        line-height: 0px;
        padding: 11px 3px;
        position: relative;
        left: 2px;
        top: -2px;
    }
</style>
<div id="Stores">
    <h1><a href="~/Administrator/Brands"><img src="~/Content/Images/back.png" style="width: 30px;" /></a> Управление магазинами</h1>
